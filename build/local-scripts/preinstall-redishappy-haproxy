#!/bin/sh

set -eu

USER="redishappy"
GROUP="haproxy"

# If we use NIS then errors should be tolerated.
if which ypwhich >/dev/null 2>&1 && ypwhich >/dev/null 2>&1
then
        set +e
fi

if ! getent group $GROUP >/dev/null
then
    if type "groupadd" > /dev/null 2>&1; then
        groupadd --system $GROUP >/dev/null
    else
        addgroup --system $GROUP >/dev/null
    fi
fi

# creating user if it isn't already there
if ! getent passwd $USER >/dev/null
then
        useradd \
          --system \
          --group $GROUP \
          --home /nonexistent \
          --shell /bin/false \
          $USER >/dev/null
fi

mkdir -p /var/log/redishappy-haproxy >/dev/null
chown $USER:$GROUP /var/log/redishappy-haproxy >/dev/null
chmod 750 /var/log/redishappy-haproxy >/dev/null

# end of NIS tolerance zone
set -e
