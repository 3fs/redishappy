description "RedisHappy. Automated Redis failover daemon"
author      "mdevilliers"

start on filesystem or runlevel [2345]
stop on [!12345]

# needs write access to the haproxy config file
setuid root
setgid root

respawn
respawn limit 2 5

env HOME="/opt/redishappy"
 
umask 007

script
    cd $HOME
    exec ./redis-haproxy -config /var/redishappy/config.json -log /var/redishappy/logs

end script
